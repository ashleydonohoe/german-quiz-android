<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="com.example.android.GermanQuiz.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Your German!"
            android:textSize="32sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/colorAccent"/>

        <TextView
            style="@style/QuestionStyle"
            android:text="1. 'Voiture' the German word for 'car'?"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">
            <RadioButton
                android:id="@+id/true_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="True"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"/>
            <RadioButton
                android:id="@+id/false_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="False"
                android:textSize="16sp"/>
        </RadioGroup>

        <TextView
            style="@style/QuestionStyle"
            android:text="2. What is the German word for 'German'?"/>

        <EditText
            android:id="@+id/word_for_german_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter German word here"
            android:layout_margin="16dp"
            android:inputType="textCapWords"/>

        <TextView
            style="@style/QuestionStyle"
            android:text="3. Select all the correct German words for 'the'."/>

        <CheckBox
            android:id="@+id/das_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Das"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"/>

        <CheckBox
            android:id="@+id/die_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Die"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"/>

        <CheckBox
            android:id="@+id/del_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            style="@style/QuestionStyle"
            android:text="4. Which word means 'woman' in German?"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <RadioButton
                android:id="@+id/pferd_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pferd"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"/>

            <RadioButton
                android:id="@+id/frau_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frau"
                android:textSize="16sp"/>
        </RadioGroup>

        <TextView
            style="@style/QuestionStyle"
            android:text="5. What is the German word for 'sky'?"/>

        <EditText
            android:id="@+id/word_for_sky_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter German word here"
            android:layout_margin="16dp"
            android:inputType="textCapWords"/>

        <Button
            android:onClick="submitQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:text="Submit"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>